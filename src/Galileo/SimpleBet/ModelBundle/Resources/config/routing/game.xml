<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_game" pattern="/">
        <default key="_controller">GalileoSimpleBetModelBundle:Game:index</default>
    </route>

    <route id="admin_game_show" pattern="/{id}/show">
        <default key="_controller">GalileoSimpleBetModelBundle:Game:show</default>
    </route>

    <route id="admin_game_new" pattern="/new">
        <default key="_controller">GalileoSimpleBetModelBundle:Game:new</default>
    </route>

    <route id="admin_game_create" pattern="/create">
        <default key="_controller">GalileoSimpleBetModelBundle:Game:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_game_edit" pattern="/{id}/edit">
        <default key="_controller">GalileoSimpleBetModelBundle:Game:edit</default>
    </route>

    <route id="admin_game_update" pattern="/{id}/update">
        <default key="_controller">GalileoSimpleBetModelBundle:Game:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="admin_game_delete" pattern="/{id}/delete">
        <default key="_controller">GalileoSimpleBetModelBundle:Game:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
