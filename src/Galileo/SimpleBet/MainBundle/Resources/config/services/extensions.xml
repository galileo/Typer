           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="gsbm.extension.player" class="Galileo\SimpleBet\MainBundle\Extension\PlayerExtension">
            <tag name="twig.extension" />
        </service>

        <service id="gsbm.extension.game_bet" class="Galileo\SimpleBet\MainBundle\Twig\GameBetScoreTwigExtension">
            <tag name="twig.extension" />
