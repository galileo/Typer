<div class="btn-group btn-group-justified">
    <div class="btn-group">
        <button type="button" class="btn btn-sm btn-default">Typy</button>
    </div>
    <div class="btn-group">
        <button type="button" class="btn btn-sm btn-default">Tabela</button>
    </div>
</div>

{% if type == 'list' %}
    {% for bet in game.bets %}
        <ul class="nav nav-pills nav-stacked">
            <li class="active">
                {{ bet.player.firstName }} {{ bet.player.lastName|truncate(1, false, '.') }}
                <span class="label label-success pull-right">{{ bet.pointsEarned }}</span>
                <span class="badge pull-right">{{ bet.score }}</span>
            </li>

        </ul>
    {% endfor %}
{% else %}
    <table class="table table-condensed table-hover">
        <tr>
            <th>Zawodnik</th>
            <th>Typ</th>
            <th>Punkty</th>
        </tr>
        {% for bet in game.bets %}
            <tr>
                <td>{{ bet.player.firstName }} {{ bet.player.lastName|truncate(1, false, '.') }}</td>
                <td>{{ bet.score }}</td>
                <td><span class="label label-success">{{ bet.pointsEarned }}</span></td>
            </tr>
        {% endfor %}
    </table>
{% endif %}