{% extends('GalileoSimpleBetMainBundle:Tournament:view.html.twig') %}

{% block content %}
    <h4>TOP 5 największe sensacje </h4>
    <table class="table">

        {% for bet in worstBettedGames %}
            <tr>
                <td>{{ bet[0].game.homeTeam }}</td>
                <td>{{ bet[0].game.awayTeam }}</td>
                <td>{{ bet[0].game.score }}</td>
                <td>{{ bet.possiblePoints }}</td>
                <td>{{ bet.pointsEarned }}</td>
                <td>{{ bet.efficiency }}</td>
            </tr>
        {% endfor %}
    </table>

    <h4>TOP 5 zwycięstwa faworytów</h4>
    <table class="table">

        {% for bet in bestBettedGames %}
            <tr>
                <td>{{ bet[0].game.homeTeam }}</td>
                <td>{{ bet[0].game.awayTeam }}</td>
                <td>{{ bet[0].game.score }}</td>
                <td>{{ bet.possiblePoints }}</td>
                <td>{{ bet.pointsEarned }}</td>
                <td>{{ bet.efficiency }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
