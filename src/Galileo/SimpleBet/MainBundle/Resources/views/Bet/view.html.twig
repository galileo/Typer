<div>
    {% if bet.id %}
        <p>
            Twój typ: <span class="label label-success pull-right disabled">{{ bet.score }}</span>
        </p>
    {% endif %}

    {% if game.betAble %}
        <a class="btn btn-block btn-success" href="{{ path('gsbm_bet_view', {'gameId': game.id}) }}">
            {% if bet.id %}
                Zmień
            {% else %}
                Dodaj
            {% endif %}
        </a>
    {% endif %}
</div>
