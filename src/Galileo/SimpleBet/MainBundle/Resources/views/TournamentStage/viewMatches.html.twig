<h4>{{ stage.name }}</h4>
<table class="table table-condensed">
    <tr>
        <th colspan="2">Dru≈ºyny</th>
        <th>Wynik</th>
        <th>Typy</th>
    </tr>
    {% for game in stage.games %}
        <tr>
            <td>{{ game.homeTeam }}</td>
            <td>{{ game.awayTeam }}</td>
            <td><span class="label label-primary">{{ game.score }}</span></td>
            <td>
                <a href="{{ path('gsbm_tournament_show_game_bets', {'tournamentId': stage.tournament.id, 'gameId' : game.id}) }}">
                <span class="label label-default">
                        {{ game.bets.count }}
                </span>
                </a>
            </td>
        </tr>
    {% endfor %}

</table>