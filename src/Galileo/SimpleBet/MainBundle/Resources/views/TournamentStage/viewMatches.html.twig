<h4>{{ stage.name }}</h4>
<table class="table table-condensed">
    <tr>
        <th colspan="2">Dru≈ºyny</th>
        <th>Wynik</th>
    </tr>
    {% for game in stage.games %}
        <tr>
            <td><span class="label label-default">
                {{ game.bets.count }}
                </span></td>
            <td class="text-center"><span class="pull-left">{{ game.date|date }}</span><span >{{ game.homeTeam }} - {{ game.awayTeam }}</span></td>
            <td>

                <a href="{{ path('gsbm_tournament_view_game_bets', {'tournamentId': stage.tournament.id, 'gameId' : game.id}) }}">
                <span class="label label-primary">{{ game.score }}</span>
                </a>
            </td>
        </tr>
    {% endfor %}

</table>